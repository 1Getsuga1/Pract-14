<Window x:Class="Pract_13.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract_13"
        mc:Ignorable="d"
        Title="LoginWindow" Height="213.66" Width="539.788">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="266*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <PasswordBox x:Name="password" HorizontalAlignment="Left" Height="23" Margin="198,46,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2">
            <Button Content="Выход" IsCancel="True" Height="25" Width="100" HorizontalAlignment="Center" Click="Exit_Click"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Content="Вход" IsDefault="True" Height="25" Width="100" HorizontalAlignment="Center" Click="Enter_Click"/>
        </Grid>
    </Grid>
</Window>
